ISYAY=/sbin/yay

if [ -f "$ISYAY" ]; then 
    echo -e "yay was located, moving on.\n"
else 
    echo -e "yay was not located, please install yay. Exiting script.\n"
    exit 
fi

sleep 3

read -n1 -rep 'Would you like to install the packages? (y,n)' INST
if [[ $INST == "Y" || $INST == "y" ]]; then
    yay -S --noconfirm hyprland kitty waybar-hyprland \
    swaybg rofi catnap ttf-jetbrains-mono-nerd \
    grim librewolf discord
fi
sleep 1

read -n1 -rep 'Would you like to copy config files? (y,n)' CFG
if [[ $CFG == "Y" || $CFG == "y" ]]; then
    echo -e "Copying config files...\n"
    cp -R dotfiles/hypr ~/.config
    cp -R dotfiles/kitty ~/.config
    cp -R dotfiles/waybar ~/.config
    cp -R dotfiles/rofi ~/.config
    cp -R dotfiles/backgrounds ~/.config

    chmod +x ~/.config/hypr/wallpapers

    cp dotfiles/.zshrc ~/
	chsh -s /usr/bin/zsh
fi

sleep 1
echo -e "Config's installed :3\n"

read -n1 -rep 'Auto open discord? (y,n)' CFG
if [[ $CFG == "Y" || $CFG == "y" ]]; then
    echo -e "Copying config files...\n"

	echo -e "discord" >> ~/.config/hypr/run

    chmod +x ~/.config/hypr/wallpapers

    cp dotfiles/.zshrc ~/
	chsh -s /usr/bin/zsh

	echo -e "Auto discord was set to true."

else
	echo -e "Auto discord was set to false."
fi

sleep 1

echo -e "Succes <3\n"
sleep 1
echo -e "Removing Sudo... \n\n"
sleep 0.5
echo -e "3\n"
sleep 1
echo -e "2\n"
sleep 1
echo -e "1\n"
sleep 1
sudo reboot now

